<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:browser="http://namespaces.zope.org/browser">

    <!-- Override the blogview template from collective.blogging -->
    <browser:page
        name="blog-view"
        for="collective.blogging.interfaces.IBlogMarker"
        class=".browser.blogview.BlogView"
        permission="zope2.View"
        template="browser/blogview.pt"
        layer="collective.blogging.interfaces.IBloggingSpecific"
        />

</configure>

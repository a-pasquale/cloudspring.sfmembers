<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="cloudspring.sfmembers">

<body>

<metal:main fill-slot="main">
    <tal:main-macro metal:define-macro="main">
        <link rel="stylesheet" type="text/css" 
            tal:define="navroot context/@@plone_portal_state/navigation_root_url"
            tal:attributes="href string:${navroot}/++resource++cloudspring.sfmembers/member.css"
            />

        <div tal:replace="structure provider:plone.abovecontenttitle" />

        <h1 class="name" style="margin-bottom:20px;" tal:content="context/name" />
       
        <div tal:define="picture nocall:context/picture"
             tal:condition="nocall:picture"
             class="picture">
             <img tal:replace="structure context/@@images/picture/thumb" />
        </div>

        <div style="float:left">
          <div tal:condition="context/cell_phone">
            <h4>Cell Phone:</h4>
            <span tal:content="context/cell_phone"/>
          </div>
          <div tal:condition="context/email">
            <h4>Email:</h4>
            <a tal:attributes="href string:mailto:${context/email}">
              <span tal:content="context/email"/>
            </a>
          </div>
          <div tal:condition="context/website">
            <h4>Website:</h4>
            <a tal:attributes="href context/website">
              <span tal:content="context/website"/>
            </a>
          </div>
          <div tal:condition="exists:context/food_preferences/output">
            <h4>Food preferences and allergies:</h4>
            <span tal:content="structure context/food_preferences/output"/>
          </div>
        </div>
        <br clear="both" />
        <div class="contentWrap"> 
        <ul class="tabs">
          <li><a class="l" href="#biography">Biography</a></li>
          <li><a class="l" href="#education">Education</a></li>
        </ul>

        <div class="pane">
          <div tal:condition="context/place_of_birth">
            <h3>Place of Birth</h3>
            <span tal:content="context/place_of_birth" />
          </div>
          <div  tal:condition="context/college_major">
            <h3>College Major:</h3>
            <span tal:content="context/college_major" />
          </div>
          <div tal:condition="exists:context/background/output">
            <h3>Pre-law school relevant background: academic, personal or work experiences:</h3>
            <span tal:content="structure context/background/output" />
          </div>
          <div tal:condition="exists:context/work_experiences/output">
            <h3>Work experiences in law school:</h3>
            <span tal:content="structure context/work_experiences/output" />
          </div>
          <div tal:condition="exists:context/writing_projects/output">
            <h3>Writing projects or articles in law school</h3>
            <span tal:content="structure context/writing_projects/output" />
          </div>
          <div tal:condition="exists:context/interests/output">
            <h3>Interests and aspirations</h3>
            <span tal:content="structure context/interests/output" />
          </div>
          <div tal:condition="exists:context/leadership/output">
            <h3>Leadership and/or team experience</h3>
            <span tal:content="structure context/leadership/output" />
          </div>
        </div>

        <div class="pane">
          <span tal:condition="context/high_school">
            <h3>High School:</h3>
            <span tal:content="context/high_school" />
          </span>
          <span tal:condition="context/college">
            <h3>College:</h3>
            <span tal:content="context/college" />
          </span>
          <span tal:condition="context/thesis">
            <h3>Thesis or major paper in revelant areas:</h3>
            <span tal:content="context/thesis" />
          </span>
          <span tal:condition="context/grad_school">
            <h3>Grad School:</h3>
            <span tal:content="context/grad_school" />
          </span>
        </div>
        </div> 
        <script>
          /* <![CDATA[ */
          jQuery(function() {
              jQuery('ul.tabs').tabs('> .pane');           
          });
          /* ]]> */
        </script>

        <div tal:replace="structure provider:plone.belowcontentbody" />

    </tal:main-macro>
</metal:main>

</body>
</html>
